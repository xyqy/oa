<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qyy.oa.modules.admin.dao.AdminMapper">
    <resultMap id="BaseResultMap" type="com.qyy.oa.modules.admin.dto.AdminMoreDto">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="account" jdbcType="VARCHAR" property="account"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="state" jdbcType="INTEGER" property="state"/>
        <result column="department_id" jdbcType="INTEGER" property="departmentId"/>
    </resultMap>
    <sql id="Base_Column_List">
            id,
            account,
            `password`,
            `name`,
            create_time,
            update_time,
            `state`,
            email,
            department_id
    </sql>

    <!-- 查询管理员列表-->
    <select id="selectAdminList" resultMap="BaseResultMap">
        SELECT
        admin.id,
        account,
        `password`,
        admin.`name`,
        admin.create_time,
        admin.update_time,
        admin.`state`,
        email,
        department_id
        ,d.name AS departmentName
        FROM admin
        LEFT JOIN department d on admin.department_id = d.id
        <where>
            <if test="account != null and account != ''">
                AND account LIKE CONCAT('%',Replace(#{account,jdbcType=VARCHAR},' ',''),'%')
            </if>
            <if test="name != null and name != ''">
                AND admin.name LIKE CONCAT('%',Replace(#{name,jdbcType=VARCHAR},' ',''),'%')
            </if>
            and admin.is_delete = 0
        </where>
        ORDER BY create_time desc
    </select>
    <!--新增管理员账号-->
    <insert id="insertAdmin" keyColumn="id" keyProperty="id"
            parameterType="com.qyy.oa.modules.admin.entity.AdminEntity" useGeneratedKeys="true">
        insert into admin
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="account != null">
                account,
            </if>
            <if test="password != null">
                `password`,
            </if>
            <if test="name != null">
                `name`,
            </if>
            <if test="email != null and email != ''">
                email,
            </if>
            <if test="departmentId != null">
                department_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="account != null">
                #{account,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                #{password,jdbcType=VARCHAR},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="email != null and email != ''">
                #{email,jdbcType=VARCHAR},
            </if>
            <if test="departmentId != null">
                #{departmentId,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>
    <!--修改管理员账号-->
    <update id="updateAdmin" parameterType="com.qyy.oa.modules.admin.entity.AdminEntity">
        update admin
        <set>
            <if test="password != null">
                `password` = #{password,jdbcType=VARCHAR},
            </if>
            <if test="name != null">
                `name` = #{name,jdbcType=VARCHAR},
            </if>
            <if test="state != null">
                `state` = #{state,jdbcType=INTEGER},
            </if>
            <if test="departmentId != null">
                department_id = #{departmentId,jdbcType=INTEGER},
            </if>
            <if test="email != null and email != ''">
                email = #{email,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
    <!--删除管理员信息-->
    <update id="deleteAdmin" parameterType="com.qyy.oa.modules.admin.entity.AdminEntity">
        update admin set is_delete = 1 where id = #{id,jdbcType=INTEGER}
    </update>
    <!--查询单个管理员详情-->
    <select id="selectAdminDetail" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from admin
        where id = #{id,jdbcType=INTEGER}
    </select>
    <!--查询管理员账号数量-->
    <select id="selectAdminAccountCount" parameterType="string" resultType="int">
        SELECT COUNT(*) FROM admin WHERE account = #{account,jdbcType=VARCHAR} and is_delete =0
    </select>

    <!--查询管理员信息-->
    <select id="selectAdminInfo" parameterType="com.qyy.oa.modules.admin.entity.AdminEntity" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM admin
        WHERE account = #{account,jdbcType=VARCHAR}
        and password = #{password,jdbcType=VARCHAR}
        and state = 0
        and is_delete = 0
    </select>
</mapper>