<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qyy.oa.modules.vacationtype.dao.VacationTypeMapper">
    <resultMap id="BaseResultMap" type="com.qyy.oa.modules.vacationtype.entity.VacationTypeEntity">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="state" jdbcType="INTEGER" property="state"/>
    </resultMap>
    <sql id="Base_Column_List">
            id,
            `name`,
            create_time,
            update_time,
            `state`
    </sql>

    <!--查询假期类型-->
    <select id="selectVacationTypeList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM vacation_type
        <where>
            <if test="name != null and name != ''">
                and name LIKE CONCAT('%',Replace(#{name,jdbcType=VARCHAR},' ',''),'%')
            </if>
        </where>
    </select>
    <!--新增假期-->
    <insert id="insertVacationType" keyColumn="id" keyProperty="id"
            parameterType="com.qyy.oa.modules.vacationtype.entity.VacationTypeEntity" useGeneratedKeys="true">
        insert into vacation_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                `name`,
            </if>
            <if test="state != null">
                `state`,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="state != null">
                #{state,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>
    <!--更新假期-->
    <update id="updateVacationType" parameterType="com.qyy.oa.modules.vacationtype.entity.VacationTypeEntity">
        update vacation_type
        <set>
            <if test="name != null">
                `name` = #{name,jdbcType=VARCHAR},
            </if>
            <if test="state != null">
                `state` = #{state,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
    <!--删除假期-->
    <delete id="deleteVacationType" parameterType="java.lang.Integer">
        delete from vacation_type
        where id = #{id,jdbcType=INTEGER}
    </delete>
    <!--查询假期数量-->
    <select id="selectVacationTypeNameCount" resultType="int">
        SELECT COUNT(*) FROM vacation_type WHERE name = #{name,jdbcType=VARCHAR}
    </select>
    <!--查询单个详情-->
    <select id="selectVacationDetail" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM vacation_type
        WHERE id = #{vacationTypeId,jdbcType=INTEGER}
    </select>
</mapper>